{
  "id": null,
  "title": "Swarm Mesh Network Dashboard",
  "tags": ["swarm-mesh", "network", "p2p"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "schemaVersion": 27,
  "version": 1,
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Connected Peers Total",
      "type": "stat",
      "targets": [
        {
          "expr": "mesh_connected_peers_total",
          "legendFormat": "Node {{node_id}} ({{node_ip}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "list",
            "orientation": "horizontal"
          },
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Network Topology",
      "type": "text",
      "targets": [],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "options": {
        "mode": "html",
        "content": "<div style=\"text-align: center; padding: 20px;\">\n  <h3>Mesh Network Status</h3>\n  <p>Monitor your swarm-mesh network health and connectivity.</p>\n  <p><strong>Active Monitoring:</strong> RTT, Peer Connections, Network Health</p>\n</div>"
      }
    },
    {
      "id": 3,
      "title": "Current RTT to Peers",
      "type": "timeseries",
      "targets": [
        {
          "expr": "mesh_peer_rtt_current_seconds * 1000",
          "legendFormat": "{{local_node_id}} → {{remote_node_id}} ({{local_ip}} → {{remote_ip}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "ms"
        },
        "overrides": []
      },
      "options": {
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "RTT Statistics (Min/Max/Avg)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "mesh_peer_rtt_min_seconds * 1000",
          "legendFormat": "Min: {{local_node_id}} → {{remote_node_id}}",
          "refId": "A"
        },
        {
          "expr": "mesh_peer_rtt_max_seconds * 1000",
          "legendFormat": "Max: {{local_node_id}} → {{remote_node_id}}",
          "refId": "B"
        },
        {
          "expr": "mesh_peer_rtt_avg_seconds * 1000",
          "legendFormat": "Avg: {{local_node_id}} → {{remote_node_id}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "ms"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Min:.*"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Max:.*"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Avg:.*"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "blue"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 52
      }
    },
    {
      "id": 5,
      "title": "Connected Peers Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "mesh_connected_peers_total",
          "legendFormat": "Node {{node_id}} ({{node_ip}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 44
      }
    },
    {
      "id": 6,
      "title": "Network Health Summary",
      "type": "stat",
      "targets": [
        {
          "expr": "count(mesh_connected_peers_total)",
          "legendFormat": "Active Nodes",
          "refId": "A"
        },
        {
          "expr": "sum(mesh_connected_peers_total)",
          "legendFormat": "Total Connections",
          "refId": "B"
        },
        {
          "expr": "avg(mesh_peer_rtt_current_seconds * 1000)",
          "legendFormat": "Avg RTT (ms)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Avg RTT (ms)"
            },
            "properties": [
              {
                "id": "unit",
                "value": "ms"
              }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 44
      }
    },
    {
      "id": 8,
      "title": "Mesh Network Graph",
      "type": "nodeGraph",
      "targets": [
        {
          "expr": "mesh_connected_peers_total",
          "refId": "nodes",
          "format": "table",
          "instant": true,
          "legendFormat": ""
        },
        {
          "expr": "label_join(mesh_peer_rtt_current_seconds * 1000, \"id\", \"->\", \"local_node_id\", \"remote_node_id\")",
          "refId": "edges",
          "format": "table",
          "instant": true,
          "legendFormat": ""
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          }
        },
        "overrides": []
      },
      "options": {
        "nodes": {
          "mainStatUnit": "short"
        },
        "edges": {
          "mainStatUnit": "ms"
        }
      },
      "pluginVersion": "8.0.0",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "transformations": [
        {
          "id": "filterByRefId",
          "options": {
            "include": "nodes"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "node_id": "id",
              "node_ip": "title",
              "Value": "mainstat"
            }
          }
        },
        {
          "id": "filterByRefId",
          "options": {
            "include": "edges"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "local_node_id": "source",
              "remote_node_id": "target",
              "local_ip": "detail__source_ip",
              "remote_ip": "detail__target_ip",
              "Value": "mainstat"
            }
          }
        }
      ]
    }
  ]
} 